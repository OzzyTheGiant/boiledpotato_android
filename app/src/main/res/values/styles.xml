<resources
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="component">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dark_component" parent="@style/component">
        <item name="android:background">@color/neutral</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/line_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="heading_dark" parent="@style/heading">
        <item name="android:textColor">@color/neutral</item>
    </style>

    <style name="cuisine_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_size_cuisine</item>
        <item name="android:layout_marginTop">@dimen/line_spacing</item>
        <item name="android:paddingTop">@dimen/button_cuisine_padding</item>
        <item name="android:background">@drawable/button_background_neutral</item>
        <item name="android:drawablePadding">@dimen/button_cuisine_drawable_padding</item>
        <item name="android:textSize">@dimen/font_size_cuisine_button</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="load_more_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/skeleton_search_result_height</item>
        <item name="android:layout_marginStart">@dimen/padding_viewport</item>
        <item name="android:layout_marginEnd">@dimen/padding_viewport</item>
        <item name="android:background">@drawable/button_background_primary_dark</item>
        <item name="android:paddingTop">@dimen/padding_viewport</item>
        <item name="android:paddingBottom">@dimen/padding_viewport</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="icon_text_button" parent="load_more_button">
        <item name="android:background">@drawable/button_background_placeholder</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/font_size_button_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/button_icon_spacing_left</item>
        <item name="android:paddingStart">@dimen/padding_viewport</item>
        <item name="android:paddingEnd">@dimen/padding_viewport</item>
    </style>
    <style name="button_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_size_main</item>
        <item name="android:background">@drawable/button_background_primary_dark</item>
    </style>
</resources>
