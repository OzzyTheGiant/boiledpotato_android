<resources
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/line_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="heading_dark" parent="@style/heading">
        <item name="android:textColor">@color/neutral</item>
    </style>

    <style name="cuisine_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_size_cuisine</item>
        <item name="android:layout_marginTop">@dimen/line_spacing</item>
        <item name="android:paddingTop">@dimen/button_cuisine_padding</item>
        <item name="android:background">@drawable/button_background_gold</item>
        <item name="android:drawableTop">@drawable/ic_utensils_black_32dp</item>
        <item name="android:drawablePadding">@dimen/button_cuisine_drawable_padding</item>
        <item name="android:textSize">@dimen/font_size_cuisine_button</item>
    </style>
</resources>
